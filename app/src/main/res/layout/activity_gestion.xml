<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".GestionActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_gestion"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/cardview_datos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                card_view:cardCornerRadius="6dp"
                card_view:cardElevation="10dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_nombre_gestion"
                        android:layout_width="246dp"
                        android:layout_height="wrap_content"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/tv_id_gestion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardview_acuerdo"
                android:layout_width="308dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/cardview_datos"
                android:layout_alignTop="@+id/cardview_datos"
                android:layout_marginStart="-2dp"
                android:layout_marginTop="1dp"
                card_view:cardCornerRadius="6dp"
                card_view:cardElevation="10dp"
                card_view:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp">

                    <utils.PrefixEditText
                        android:id="@+id/et_valor_acuerdo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/checkBox_acuerdo_de_pago"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="34dp"
                        android:layout_weight="1"
                        android:digits="0123456789"
                        android:ems="10"
                        android:hint="Valor a pagar"
                        android:inputType="numberDecimal"
                        android:maxLines="1"
                        android:tag="$ " />

                    <CheckBox
                        android:id="@+id/checkBox_acuerdo_de_pago"
                        android:layout_width="199dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="60dp"
                        android:checked="true"
                        android:onClick="onCheckboxClicked"
                        android:text="Acuerdo de pago" />

                    <EditText
                        android:id="@+id/et_fecha"
                        android:layout_width="153dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/checkBox_acuerdo_de_pago"
                        android:layout_alignStart="@+id/et_valor_acuerdo"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="51dp"
                        android:layout_marginEnd="104dp"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:ems="10"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="Fecha acuerdo" />

                    <ImageButton
                        android:id="@+id/imageButton_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/checkBox_acuerdo_de_pago"
                        android:layout_alignStart="@+id/et_fecha"
                        android:layout_alignEnd="@+id/et_fecha"
                        android:layout_marginStart="170dp"
                        android:layout_marginTop="58dp"
                        android:layout_marginEnd="-63dp"
                        android:background="@drawable/roundcorner"
                        android:padding="5dp"
                        card_view:srcCompat="@drawable/ic_event_white_24dp" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardview_gestion"
                android:layout_width="match_parent"
                android:layout_height="255dp"
                android:layout_alignStart="@+id/cardview_acuerdo"
                android:layout_alignTop="@+id/cardview_datos"
                android:layout_marginStart="-1dp"
                android:layout_marginTop="1dp"
                card_view:cardCornerRadius="6dp"
                card_view:cardElevation="10dp"
                card_view:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignEnd="@+id/cardview_gestion"
                    android:layout_alignBottom="@+id/cardview_gestion"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/tv_resultado_gestion"
                        android:layout_width="119dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="39dp"
                        android:layout_marginTop="11dp"
                        android:layout_marginEnd="121dp"
                        android:text="Resultado gestion:" />

                    <Spinner
                        android:id="@+id/spinner_resultado_gestion"
                        android:layout_width="217dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_resultado_gestion"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="39dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="38dp"
                        android:layout_marginBottom="-333dp" />

                    <EditText
                        android:id="@+id/et_descripcion"
                        android:layout_width="218dp"
                        android:layout_height="67dp"
                        android:layout_below="@+id/tv_resultado_gestion"
                        android:layout_alignStart="@+id/spinner_resultado_gestion"
                        android:layout_alignEnd="@+id/spinner_resultado_gestion"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="36dp"
                        android:layout_marginEnd="-2dp"
                        android:ems="10"
                        android:hint="DescripciÃ³n"
                        android:inputType="textMultiLine" />

                    <Button
                        android:id="@+id/button_savegestion"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_alignStart="@+id/et_descripcion"
                        android:layout_alignEnd="@+id/et_descripcion"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="137dp"
                        android:layout_marginEnd="-16dp"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/my_button_bg"
                        android:text="Guardar" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>


        <!--<android.support.design.widget.FloatingActionButton
            android:id="@+id/fabSave"
            android:layout_width="80dp"
            android:layout_height="54dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/default_gap"
            android:layout_marginTop="@dimen/default_gap"
            android:layout_marginEnd="@dimen/default_gap"
            android:layout_marginBottom="4dp"
            android:clickable="true"
            app:backgroundTint="@color/colorPrimary"
            app:fabSize="normal" />-->

    </RelativeLayout>

</LinearLayout>